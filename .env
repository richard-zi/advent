# Security
JWT_SECRET=your-secure-jwt-secret
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
SITE_PASSWORD=your-secure-site-password

# Application Settings
NODE_ENV=production
PORT=5000
ADVENT_START_DATE=2024-12-01
ALLOWED_IPS=192.168.1.100,192.168.1.101,192.168.1.102,192.168.1.103

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:80,http://192.168.1.100,http://192.168.1.101,http://192.168.1.102,http://192.168.1.103

# File Size Limits
MAX_FILE_SIZE=52428800 # 50MB in bytes

# Thumbnail Configuration
THUMBNAIL_WIDTH=500
THUMBNAIL_QUALITY=85

# GitHub Settings
GITHUB_REPO=https://github.com/yourusername/advent-calendar.git
GITHUB_BRANCH=main

# Frontend Settings
REACT_APP_API_URL=http://localhost:5000

# FFmpeg Configuration (paths inside container)
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Logging and Debug
DEBUG=app:*
LOG_LEVEL=info

# Storage Paths (inside container)
MEDIA_PATH=/app/media
THUMBNAILS_PATH=/app/thumbnails
MESSAGES_PATH=/app/messages
POLLS_PATH=/app/polls
ASSETS_PATH=/app/assets